<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:layout_weight="1"
    android:stretchColumns="*">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <Button
            android:id="@+id/btnrequest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fbutton_color_pomegranate"
            android:foreground="@mipmap/dashboard_request"
            android:paddingTop="16dp"
            android:padding="6dp"
            android:layout_margin="2dp"
            android:gravity="center"
            />

        <Button
            android:foreground="@mipmap/dashboard_donate_blood"
            android:background="@color/fbutton_color_pomegranate"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_margin="2dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent">

        <TextView
            android:text="Request for blood"
            android:textAlignment="center"
            android:textSize="17sp"/>

        <TextView
            android:text="Donate blood"
            android:textAlignment="center"
            android:textSize="17sp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <Button
            android:foreground="@mipmap/dashboard_statistic"
            android:background="@color/fbutton_color_pomegranate"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/adBtnStatistic"
            android:paddingTop="16dp"
            android:gravity="bottom"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_margin="2dp" />


        <Button
            android:foreground="@mipmap/dashboard_health"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:gravity="bottom"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_margin="2dp" />

    </TableRow>
    <TableRow>
        <TextView
            android:text="Donation Statistics"
            android:textAlignment="center"
            android:textSize="17sp"/>
        <TextView
            android:text="Health benefits"
            android:textAlignment="center"
            android:textSize="17sp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">


        <Button
            android:id="@+id/whoCanDonate"
            android:foreground="@mipmap/dashboard_who_can_donate"
            android:background="@color/fbutton_color_pomegranate"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:gravity="bottom"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_margin="2dp" />


        <Button
            android:id="@+id/amazingstories"
            android:foreground="@mipmap/dashboard_amazing_stories"
            android:background="@color/fbutton_color_pomegranate"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingTop="16dp"
            android:gravity="bottom"
            android:textAlignment="center"
            android:padding="6dp"
            android:layout_margin="2dp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent">
        <TextView
            android:text="Who can donate"
            android:textAlignment="center"
            android:textSize="17sp"/>
        <TextView
            android:text="Amazing Stories"
            android:textAlignment="center"
            android:textSize="17sp"/>

    </TableRow>

</TableLayout>